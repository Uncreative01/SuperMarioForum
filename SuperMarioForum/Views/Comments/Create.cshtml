@model SuperMarioForum.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<h1>Add a Comment</h1>
<hr />

<div class="card p-4 shadow-sm">
    <div class="card-body">
        <form asp-controller="Comments" asp-action="Create" method="post">
            <input type="hidden" asp-for="DiscussionId" />

            <div class="mb-3">
                <label asp-for="Content" class="form-label">Your Comment</label>
                <textarea asp-for="Content" class="form-control" rows="3" required></textarea>
            </div>

            <button type="submit" class="btn btn-success">Post Comment</button>
        </form>
    </div>
</div>

<a asp-controller="Discussions" asp-action="GetDiscussion" asp-route-id="@Model.DiscussionId" class="btn btn-secondary mt-3">Back to Discussion</a>
